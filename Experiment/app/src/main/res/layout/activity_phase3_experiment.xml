<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="org.guytp.mscexperiment.Phase3ExperimentActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instructionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Instruction text goes here"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/emotionWordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Word"
                android:textSize="72sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/stateButton1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="1"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="2"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="3"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton4"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="4"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton5"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="20dp"
                    android:text="None"
                    android:textSize="52sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/playStateButton1"
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="0dp"
                    android:text="&#x25b6;"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/playStateButton2"
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="0dp"
                    android:text="&#x25b6;"
                    android:textSize="42sp" />
                <Button
                    android:id="@+id/playStateButton3"
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="0dp"
                    android:text="&#x25b6;"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/playStateButton4"
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="0dp"
                    android:text="&#x25b6;"
                    android:textSize="42sp" />
                <Button
                    android:id="@+id/playStateButton5"
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:padding="0dp"
                    android:text="&#x25b6;"
                    android:visibility="invisible"
                    android:textSize="42sp" />
            </LinearLayout>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:onClick="onNextPress"
                android:padding="30dp"
                android:text="Next"
                android:textSize="52sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

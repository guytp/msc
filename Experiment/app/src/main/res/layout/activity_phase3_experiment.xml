<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="org.guytp.mscexperiment.Phase3ExperimentActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/playStateButton1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="10dp"
                    android:text="Play One"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/playStateButton2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="10dp"
                    android:text="Play Two"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/playStateButton3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="10dp"
                    android:text="Play Three"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/playStateButton4"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onPlayStateButtonPress"
                    android:padding="10dp"
                    android:text="Play Four"
                    android:textSize="52sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="40dp"
                android:text="Which state do you think best represents the feeling or emotion word shown below?"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/emotionWordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Word"
                android:textSize="42sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/stateButton1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="1"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="2"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="3"
                    android:textSize="52sp" />

                <Button
                    android:id="@+id/stateButton4"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="20dp"
                    android:onClick="onStateButtonPress"
                    android:padding="10dp"
                    android:text="4"
                    android:textSize="52sp" />
            </LinearLayout>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="onNextPress"
                android:padding="30dp"
                android:text="Next"
                android:textSize="52sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

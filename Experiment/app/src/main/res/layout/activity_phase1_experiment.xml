<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.guytp.mscexperiment.Phase1ExperimentActivity"
    android:keepScreenOn="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mainLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="50dp"
                android:text="Please wait for just a moment..."
                android:textSize="32sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sameButton"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="fill_vertical"
                    android:layout_margin="20dp"
                    android:onClick="onSameDifferentPress"
                    android:padding="10dp"
                    android:text="Same"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/differentButton"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="fill_vertical"
                    android:layout_margin="20dp"
                    android:onClick="onSameDifferentPress"
                    android:padding="10dp"
                    android:text="Different"
                    android:textSize="32sp" />
            </LinearLayout>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:onClick="onNextPress"
                android:padding="30dp"
                android:text="Next"
                android:textSize="52sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>